<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment1_empty1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5" />

    <TextView
        android:id="@+id/fragment1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="#3F51B5"
        android:textSize="38sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/fragment1_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"

        android:scaleType="centerCrop"
        android:src="@drawable/ic_refresh" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fragment1_hashtag1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingStart="10dp"
/>

            <TextView
                android:id="@+id/fragment1_hashtag2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment1_hashtag3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fragment1_hashtag4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold"
                android:paddingStart="10dp"/>

            <TextView
                android:id="@+id/fragment1_hashtag5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment1_hashtag6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:textColor="#2196F3"
                android:textSize="24sp"
                android:textStyle="bold" />
        </TableRow>

    </TableLayout>
</LinearLayout>